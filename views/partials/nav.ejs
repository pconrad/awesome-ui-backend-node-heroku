<style>
/* icon */ .custom-navbar .fa {font-size:25px}

@media (max-width:767px) { 
  .custom-navbar .navbar-right {
    float: right;
    padding-right: 15px;
  }
  .custom-navbar .nav.navbar-nav.navbar-right li {
    float: right;
  }
  .custom-navbar .nav.navbar-nav.navbar-right li > a {
    padding:8px 5px;
  }
  .custom-navbar .navbar-toggle {
    float: left
  }
  .custom-navbar .navbar-header {
    float: left;
    width: auto!important;
  }
  .custom-navbar {
    clear: both;
    float: none;
  }
}
</style>

<nav id="navigation-bar"class="navbar navbar-default navbar-static-top navbar-inverse custom-navbar">
  <div class="container">

    <ul class="nav navbar-nav navbar-right">

      <% if (user) { %>

      <!-- User is logged in so... display the user's name + logout link  -->

      <li class="dropdown" id="user-dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> <%= user.name %>    <span class="glyphicon glyphicon-cog"></span></a>
        <ul id="user-links" class="dropdown-menu" role="menu">
          <li><a href="/usersettings">Settings</a></li>
          <li role="separator" class="divider"></li>
          <li><a href="/logout">Sign Out</a></li>
        </ul>
      </li>

      <% } else { %>

      <!-- User NOT logged in so... google and facebook login buttons  -->
      <li class="active">
        <div>
          <a id="facebook-login" class="btn navbar-btn btn-block btn-social btn-facebook" href="/auth/facebook">
            <i class="fa fa-facebook"></i> Login with Facebook
          </a>
        </div>
      </li>
      <li>
        <span style="padding-left:4px;"></span>
      </li>
      <li class="active">
        <div>
          <a id="google-login" class="btn navbar-btn btn-block btn-social btn-google" href="/auth/google">
            <i class="fa fa-google"></i> Login with Google
          </a>
        </div>
      </li>

      <% } %>
   </ul>


   <div class="navbar-left">
    <ul class="nav navbar-nav">
      <li class="active">
        <a href="/" id="home-button"><span class="glyphicon glyphicon-home"></span> Home</a>
      </li>
      <li class="dropdown" id="navigation-dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> Choose Your Role <span class="caret"></span></a>
        <ul id="navigation-links" class="dropdown-menu" role="menu">
          <li><a href="/student">Student</a></li>
          <li><a href="/instructor">Instructor</a></li>
          <li><a href="/author">Author</a></li>
          <li><a href="/developer">Developer</a></li>
        </ul>
      </li>
    </ul>
  </div>
</div>
</nav>
